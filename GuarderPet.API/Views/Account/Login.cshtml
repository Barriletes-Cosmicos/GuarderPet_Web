@model GuarderPet.API.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container" id="loginContainer">
    <div class="row">
        <div class="col-md-12">
            <h2 style="text-align: center; color: #db1616; -webkit-text-stroke: 1px white; ">Inicio de Sesión</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label  style="color: #db1616; -webkit-text-stroke: 1px white; font-size: 1.2rem; " asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-warning"></span>
                </div>
                <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

                <div class="form-group">
                    <label  style="color: #db1616; -webkit-text-stroke: 1px white; font-size: 1.2rem; " asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                        <label  style="color: #db1616; -webkit-text-stroke: 1px white; font-size: 1.2rem;" asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    <span asp-validation-for="RememberMe" class="text-warning"></span>
                </div>

                <div class="form-group buttonContainer">
                    <input type="submit" value="Iniciar Sesión" class="btn" id="btnLogin"/>
                    <a asp-action="Register" class="btn" id="btnRegister">Registrar Nuevo Usuario</a>
                    <hr />
                    <a asp-action="RecoverPassword" class="btn btn-link" style="color: #db1616; -webkit-text-stroke: 1px white; font-size: 1.2rem; ">¿Olvidaste tu contraseña?</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
