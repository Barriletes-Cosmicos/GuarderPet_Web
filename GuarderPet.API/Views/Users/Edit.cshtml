@model GuarderPet.API.Models.UserViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Editar usuario</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />
            <input type="hidden" asp-for="Email" />

            <partial name="_User" />

            <div class="form-group" style="display:flex; justify-content:space-between">
                <button type="button" class="btn btn-primary" style="background-color: #FF2626; border: none; min-width: 150px;">
                    <a asp-action="Index" style="text-decoration:none; color:white;">Volver</a>
                </button>
                <input type="submit" value="Editar usuario" class="btn btn-primary" style="background-color: #FF2626; border: none; min-width: 150px;" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}