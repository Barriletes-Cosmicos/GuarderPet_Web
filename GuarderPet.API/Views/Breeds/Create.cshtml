@model GuarderPet.API.Data.Entities.Breed

@{
    ViewData["Title"] = "Create";
}

<h1>Crear nueva raza con su tipo</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BreedTittle" class="control-label"></label>
                <input asp-for="BreedTittle" class="form-control mb-2" placeholder="Raza de la mascota" />
                <select asp-for="PetType.Type" class="form-control">
                    <option  value="Perro">Perro</option>
                    <option  value="Gato">Gato</option>
                    <option  value="Tortuga">Tortuga</option>
                </select>
                <span asp-validation-for="BreedTittle" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:flex; justify-content:space-between">
                <button type="button" class="btn btn-primary" style="background-color: #FF2626; border: none; min-width: 150px;">
                    <a asp-action="Index" style="text-decoration:none; color:white;">Volver</a>
                </button>
                <input type="submit" value="Crear nueva raza" class="btn btn-primary" style="background-color: #FF2626; border: none; min-width: 150px;" />
            </div>
        </form>
    </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
